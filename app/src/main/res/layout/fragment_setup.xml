<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbarSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/setupSystem"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_60sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblue"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滑动开关"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_60sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FF909090"/>
        <RelativeLayout
            android:id="@+id/rlEditionUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_60sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已是最新版本"
                android:textSize="@dimen/dimen_50sp" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FF909090"/>
        <RelativeLayout
            android:id="@+id/rlAgainLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新登录"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_60sp" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FF909090"/>
    </LinearLayout>
</LinearLayout>