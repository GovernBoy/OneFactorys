<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbarCarapply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:src="@mipmap/title_back_gray" />

            <TextView
                android:id="@+id/tvTbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="出车单展示"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_60sp" />

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_30"
                android:src="@mipmap/search" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/lltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbarCarapply"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightblue"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_20"
            android:text="@string/carid"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_60sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightblue"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_20"
            android:text="@string/applyname"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_60sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightblue"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_20"
            android:text="@string/cardate"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_60sp" />
    </LinearLayout>

    <com.daoran.newfactory.onefactory.view.RefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/lltitle"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <com.daoran.newfactory.onefactory.view.NoscrollListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
    </com.daoran.newfactory.onefactory.view.RefreshLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:layout_below="@+id/swipe_container"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSqlopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直接进入"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_60sp" />
    </LinearLayout>
</RelativeLayout>