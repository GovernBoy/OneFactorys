<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_roate_via"
        android:layout_width="55dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/img_roate_via"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginStart="19dp"
            android:background="@mipmap/position_delete"
            android:contentDescription="@null"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_via"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:textColor="@color/red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_route_via"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|start"
            android:paddingEnd="0dp"
            android:paddingLeft="7dp"
            android:paddingRight="0dp"
            android:paddingStart="7dp"
            android:singleLine="true"
            android:text="@string/txt_route_via_one"
            android:textColor="@color/M828282" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/MA3A3A3" />
    </LinearLayout>
</LinearLayout>