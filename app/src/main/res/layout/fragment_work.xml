<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbarWrok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:background="@drawable/bill_name_item"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idworkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="毕三军"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_51sp" />

                <ImageView
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:src="@mipmap/arrow_triangle" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/workTask"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_60sp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <com.daoran.newfactory.onefactory.view.listview.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.daoran.newfactory.onefactory.view.ScrollGridView
                android:id="@+id/sgv_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:numColumns="3"
                android:padding="20dp"
                android:stretchMode="columnWidth" />
        </LinearLayout>
    </com.daoran.newfactory.onefactory.view.listview.BounceScrollView>

</LinearLayout>