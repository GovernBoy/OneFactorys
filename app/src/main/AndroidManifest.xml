<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daoran.newfactory.onefactory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/daoran"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 启动页 -->
        <activity
            android:name=".activity.start.StartActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 主页 -->
        <activity
            android:name=".activity.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 引导页 -->
        <activity
            android:name=".activity.guide.GuideActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 登录 -->
        <activity
            android:name=".activity.login.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 注册 -->
        <activity
            android:name=".activity.resgister.ResgisterActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 出车单展示 -->
        <activity
            android:name=".activity.work.CarapplyActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 用车查询 -->
        <activity
            android:name=".activity.work.SqlCarApplyActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 外勤签到查询 -->
        <activity
            android:name=".activity.work.SqlSiganDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 外勤签到查询测试类 -->
        <activity
            android:name=".activity.work.DebugDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 生产日报查询测试类 -->
        <activity
            android:name=".activity.work.ProductionActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 查货跟踪查询测试类 -->
        <activity
            android:name=".activity.work.CommoditySqlActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
    </application>

</manifest>